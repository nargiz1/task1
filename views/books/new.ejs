<h1 style="text-align: center ;">New Book</h1>
<form action="/book" method="POST" enctype="multipart/form-data">
    <input type="text" name="name">
    <%- include('../partials/errorMessage.ejs') %>
    <select name="test" id="">
    <% tests.forEach(test => { %>
        <% if(test.id === book?.author?.id) {%> 
            <option selected value="<%= test.id %>" label="<%= test.name %>" >
        <% } else{ %>
            <option value="<%= test.id %> " label=" <%= test.name %> " >
       <% } %> 
    <% }) %> 
    </select>
    <input type="file" name="image">
    <a href="/book">Cancel</a>
    <button type="submit">Create</button>
</form>