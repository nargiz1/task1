<div class="main">
  <h1>new</h1>
  <h2><%= apartment.name %></h2>
  <div class="images">
    <div id="image-main">
      <img src="<%= rooms[0].imagePath %>" alt="" />
      <p><%= rooms[0].name %></p>
    </div>
    <div class="row">
      <% rooms.forEach(room => { %> <% if(rooms.indexOf(room) === 0){%>
      <div class="col-3 active">
        <div class="image">
          <div class="overlay"></div>
          <img src="<%= room.imagePath %>" alt="" name="<%= room.name %>  " />
        </div>
      </div>
      <%}else{%>
      <div class="col-3">
        <div class="image">
          <div class="overlay"></div>
          <img src="<%= room.imagePath %>" alt="" name="<%= room.name %>  " />
        </div>
      </div>
      <%} %> <% }) %>
    </div>
  </div>
  <div id="space">
    <h4>The Space</h4>
    <div class="row">
      <div class="col-6">
        <p>
          <i class="fa-solid fa-person"></i> Max people: <%=
          apartment.maxPeople %>
        </p>
        <p>
          <i class="fa-solid fa-bath"></i> Bathrooms: <%= apartment.bathrooms
          %>
        </p>
        <p>
          <i class="fa-solid fa-bed"></i> Bedrooms: <%= apartment.bedrooms %>
        </p>
      </div>
      <div class="col-6">
        <p>
          <i class="fa-solid fa-clock"></i> Check In:
          <sub><%= apartment.checkIn %> </sub>
        </p>
        <p>
          <i class="fa-solid fa-clock"></i> Check Out:
          <sub><%= apartment.checkOut %> </sub>
        </p>
      </div>
    </div>
  </div>
  <hr />
  <div id="amenities">
    <h4>Amenities</h4>
    <div class="row">
      <div class="col-6">
        <% if(apartment.shower) {%>
        <p><i class="fa-solid fa-shower"></i> Shower</p>
        <%}%> <% if(apartment.wifi) {%>
        <p><i class="fa-solid fa-wifi"></i> WiFi</p>
        <%}%> <% if(apartment.tv) {%>
        <p><i class="fa-solid fa-tv"></i> TV</p>
        <%}%>
      </div>
      <div class="col-6">
        <% if(apartment.kitchen) {%>
        <p><i class="fa-solid fa-utensils"></i> Kitchen</p>
        <%}%> <% if(apartment.heating) {%>
        <p><i class="fa-solid fa-temperature-three-quarters"></i> Heating</p>
        <%}%> <% if(apartment.accessible) {%>
        <p><i class="fa-solid fa-wheelchair"></i> Accessible</p>
        <%}%>
      </div>
    </div>
  </div>
  <hr />
  <div id="extraInfo">
    <h4>Extra Info</h4>
    <p>
      <%= apartment.extraInfo  %> 
    </p>
    <p>
      We accept:
      <i class="fa-solid fa-credit-card"></i>
      <i class="fa-brands fa-cc-mastercard"></i>
      <i class="fa-brands fa-cc-discover"></i>
      <i class="fa-brands fa-cc-apple-pay"></i>
    </p>
  </div>
  <hr />
  <div id="rules">
    <h4>Rules</h4>
    <p>
      <%= apartment.rules  %> 
    </p>
    <p>Subscribe to receive updates on available dates and special offers.</p>
    <button class="subscribeBtn">Subscribe</button>
  </div>
  <hr />
  <div id="contact">
    <h4>Contact</h4>
    <div class="contanctInfo">
      <p><i class="fa-solid fa-location-dot"></i>Chicago, US</p>
      <p><i class="fa-solid fa-phone"></i>Phone: +00 151515</p>
      <p><i class="fa-solid fa-envelope"></i>Email: mail@mail.com</p>
    </div>
    <p>Questions? Go ahead, ask them:</p>
    <form action="submit">
      <input type="text" placeholder="Name" />
      <input type="text" name="email" placeholder="Mail" />
      <input type="text" placeholder="Message" />
      <button>Send a Message</button>
    </form>
  </div>
</div>
